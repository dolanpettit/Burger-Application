<div id="targetContainer" class="container">
  <div class="row">
      <div class="col s6">
          <center>
          <h2>Burgers to be devoured</h2>

          <ul>
            {{#each burgers}}
                {{#unless devoured}}
                  <h5>{{burger_name}}</h5><a class="btn devourButton" data-id={{id}}>DEVOUR</a>
                {{/unless}}
            {{/each}}
          </ul>
          </center>
      </div>

      <div class="col s6">
          <center>
          <h2>Burgers recently devoured</h2>

          <ul>
            {{#each burgers}}
                {{#if devoured}}
                  <h5>{{burger_name}}</h5>
                {{/if}}
            {{/each}}
          </ul>
          </center>
      </div>
  </div>

  <div class="row">
    <div class="col s12">
        <center>
            <h2>Create your own burger</h2>
                
            <p>Give your burger a name:</p>
            <div class="inline">
            <input id="burgerName" type="input">
            <button type="submit" class="btn-primary addBurger">Add your burger to the menu</button>
        </center>
    </div>
  </div>
  <br>
  <hr>
  <center>
    <button class="btn deleteButton">Throw away all burgers</button>
  </center>
</div>